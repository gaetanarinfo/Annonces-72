{% for message in app.flashes('success') %}
    <div class="alert alert-success text-center" style="width: 29% !important; margin: 27px auto auto auto;">
        <i class="fa fa-check text-success" aria-hidden="true"></i>
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger text-center" style="width: 29% !important; margin: 27px auto auto auto;">
        <i class="fa fa-times text-danger" aria-hidden="true"></i>
        {{ message }}
    </div>
{% endfor %}

<div class="container row mt-5 m-auto" style="justify-content: center;display: flex;">
	<div class="col-md-8">
		<div class="card">
			<div class="card-body info-card social-about text-center">
				<h2 class="text-blue">Choisissez une formule</h2>
				<hr>

				<div class="mt-2 mb-4 text-center">
					<h4>
						<i class="fas fa-coins mr-2 text-warning"></i>
						<strong>Mes crédits
							<span class="text-success">{{ app.user.credits }}</span>
						</strong>
					</h2>
				</h4>
			</div>

			<div class="mt-3">
				<label for="validate" style="align-items: center;" class="mr-2">
					<input id="CGV" type="checkbox" value="0" name="validate">
					Je reconnais avoir lu et accepté les
					<a href="" title="Conditions Générales de Vente">Conditions Générales de Vente</a>
					et renonce à mon droit de rétractation. En validant ma commande j’accepte le commencement immédiat de la prestation.
				</label>
			</div>

            <div class="row mt-3">

                <div class="col-md-4 mb-3">
                    <img src="http://localhost:8000/img/all/42845.png" width="170px" />
                    <p class="mt-3 mb-2"><i class="fas fa-coins mr-2 text-warning"></i> <b>1 semaines (10 crédits)</b></p>
                    {% if app.user.credits < 10 %}
                        <a href="{{ path('user.credit') }}" id="premium1" class="btn btn-primary disabled" title="1 semaines (10 crédits)">Acheter</a>
                    {% else %}
                        <a href="{{ path('annonces.premium.achat10', {'id': annoncesId.id,'token': csrf_token('token_achat_10')}) }}" id="premium1" class="btn btn-primary disabled" title="1 semaines (10 crédits)">Acheter</a>
                    {% endif %}
                </div>

                <div class="col-md-4 mb-3">
                    <img src="http://localhost:8000/img/all/42845.png" width="170px" />
                    <p class="mt-3 mb-2"><i class="fas fa-coins mr-2 text-warning"></i> <b>2 semaines (25 crédits)</b></p>
                    {% if app.user.credits < 25 %}
                        <a href="{{ path('user.credit') }}" id="premium2" class="btn btn-primary disabled" title="1 semaines (10 crédits)">Acheter</a>
                    {% else %}
                        <a href="{{ path('annonces.premium.achat25', {'id': annoncesId.id,'token': csrf_token('token_achat_25')}) }}" id="premium2" class="btn btn-primary disabled" title="2 semaines (25 crédits)">Acheter</a>
                    {% endif %}
                </div>

                <div class="col-md-4 mb-3">
                    <img src="http://localhost:8000/img/all/42845.png" width="170px" />
                    <p class="mt-3 mb-2"><i class="fas fa-coins mr-2 text-warning"></i> <b>1 mois (50 crédits)</b></p>
                    {% if app.user.credits < 50 %}
                        <a href="{{ path('user.credit') }}" id="premium3" class="btn btn-primary disabled" title="1 semaines (10 crédits)">Acheter</a>
                    {% else %}
                        <a href="{{ path('annonces.premium.achat50', {'id': annoncesId.id,'token': csrf_token('token_achat_50')}) }}"  id="premium3" class="btn btn-primary disabled" title="1 mois (50 crédits)">Acheter</a>
                    {% endif %}
                </div>

            </div>
		</div>
	</div>
</div></div>
